{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "src/migration/**/*.ts", "src/entity/**/*.ts"]
}
